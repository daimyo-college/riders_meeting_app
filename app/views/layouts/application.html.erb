<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>RidersMeetingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   <header>
      <p>RidersMeeting</p>
      <nav>
        <ul>
          <li>
          <%= link_to ("/touring_routes") do %>
            <span class="fas fa-globe-asia fa-3x"></span>
          <% end %>
          </li>
          <li>
          <%= link_to ("/touring_routes/new") do %>
            <span class="fas fa-plus fa-3x"></span>
          <% end %>
          </li>
          <li>
          <%= link_to ("/riders") do %>
            <span class="fas fa-user-friends fa-3x"></span>
          <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
