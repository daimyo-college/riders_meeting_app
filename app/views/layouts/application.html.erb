<!DOCTYPE html>
<html>

  <head>
    <title>RidersMeetingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   <header>
      <p>RidersMeeting</p>
      <nav>
        <ul>
          <li><%= link_to image_tag('home.jpeg'),'/touring_routes' %></li>
          <li><%= link_to "route","/touring_routes/new" %></li>
          <li><%= link_to "view", "/touring_routes/#{@touring_route.id}" %></li>
          <li><%= link_to "user", "/riders/#{@rider.id}" %></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
